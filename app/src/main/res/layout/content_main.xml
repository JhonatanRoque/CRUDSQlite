<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="@color/personalizado"
    >

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAlignment="center"
       android:text="Datos del proucto"
       android:textSize="30dp"
       />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="167dp"
                android:src="@drawable/pngegg"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/et_codigo"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el código"
                android:drawableStart="@drawable/linecod"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                />

            <EditText
                android:id="@+id/edtDesc"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:hint="Ingrese la descripción del artículo"
                android:drawableStart="@drawable/edit"
                android:inputType="textMultiLine" />
            <EditText
                android:id="@+id/edtPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el precio del artículo"
                android:inputType="numberDecimal"
                android:drawableStart="@drawable/money"
                android:layout_margin="5dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGuardar"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:text="GUARDAR OBJETOS"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/save"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuscarCod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:text="CONSULTAR POR CÓDIGO"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnbuscarDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:text="CONSULTAR POR DESCRIPCIÓN"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_delete"
                android:text="BORRAR"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"

                android:shadowColor="#A8A8A8"
                android:shadowDx="-5"
                android:shadowDy="-5"
                android:shadowRadius="5"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/attributes"
                android:text="Modificar"
                />



        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>